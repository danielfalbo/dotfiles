{
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  "editor.wordWrap": "on",

  "git.autofetch": "all",
  "git.confirmSync": false,

  "vim.easymotion": true,
  "vim.camelCaseMotion.enable": true,
  "vim.highlightedyank.enable": true,
  "vim.sneak": true,

  "vimFindHighlight.enableUnderline": false,

  "vim.useSystemClipboard": true,

  "vim.leader": "<space>",

  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] },

    { "before": ["Q"], "after": ["@", "q"] },

    { "before": ["Y"], "after": ["y", "$"] },

    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"],
      "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    },

    {
      "before": ["<leader>", "n"],
      "commands": ["editor.action.marker.next"],
      "when": ["editorFocus"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["editor.action.marker.prev"],
      "when": ["editorFocus"]
    },

    { "before": ["u"], "commands": ["undo"] },
    { "before": ["c-r"], "commands": ["redo"] },

    { "before": ["c-h"], "commands": ["workbench.action.navigateLeft"] },
    { "before": ["c-l"], "commands": ["workbench.action.navigateRight"] },
    { "before": ["c-k"], "commands": ["workbench.action.navigateUp"] },
    { "before": ["c-j"], "commands": ["workbench.action.navigateDown"] }
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] },

    { "before": ["<"], "after": ["<", "g", "v"] },
    { "before": [">"], "after": [">", "g", "v"] }
  ],

  "workbench.iconTheme": "material-icon-theme",

  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",

  "files.defaultLanguage": "markdown",

  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.activityBar.orientation": "horizontal",
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.showFoldingControls": "never",

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  "C_Cpp.default.compilerPath": "/opt/homebrew/bin/g++-13 ",

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[c]": { "editor.defaultFormatter": "ms-vscode.cpptools" },
  "[cpp]": { "editor.defaultFormatter": "ms-vscode.cpptools" },
  "[java]": { "editor.defaultFormatter": "redhat.java" },
  "[python]": { "editor.defaultFormatter": "ms-python.black-formatter" },
  "[swift]": { "editor.defaultFormatter": "vknabel.vscode-apple-swift-format" },

  "workbench.editorAssociations": { "*.pdf": "latex-workshop-pdf-hook" },

  "terminal.integrated.scrollback": 999999,
  "terminal.integrated.persistentSessionScrollback": 999999,

  "typescript.preferences.useAliasesForRenames": false
}
