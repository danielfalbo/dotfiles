{
  "editor.formatOnSave": true,

  "git.confirmSync": false,

  "vim.highlightedyank.enable": true,

  "vim.useSystemClipboard": true,

  "vim.leader": "<space>",

  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["Q"], "after": ["@", "q"] },

    { "before": ["Y"], "after": ["y", "$"] },

    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"],
      "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    },

    {
      "before": ["<leader>", "n"],
      "commands": ["editor.action.marker.next"],
      "when": ["editorFocus"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["editor.action.marker.prev"],
      "when": ["editorFocus"]
    },

    { "before": ["c-h"], "commands": ["workbench.action.navigateLeft"] },
    { "before": ["c-l"], "commands": ["workbench.action.navigateRight"] },
    { "before": ["c-k"], "commands": ["workbench.action.navigateUp"] },
    { "before": ["c-j"], "commands": ["workbench.action.navigateDown"] }
  ],

  "workbench.iconTheme": "material-icon-theme",

  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",

  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "editor.showFoldingControls": "never",
  "window.commandCenter": false,
  "window.density.editorTabHeight": "compact",
  "workbench.activityBar.location": "hidden",
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": { "editor.defaultFormatter": "ms-python.black-formatter" },

  "workbench.editorAssociations": { "*.pdf": "latex-workshop-pdf-hook" },

  "terminal.integrated.scrollback": 999999,
  "terminal.integrated.persistentSessionScrollback": 999999,

  "typescript.preferences.useAliasesForRenames": false,

  "terminal.integrated.showExitAlert": false
}
