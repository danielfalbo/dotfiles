{
  "editor.formatOnSave": true,

  "git.confirmSync": false,

  "git.blame.editorDecoration.enabled": true,

  "vim.highlightedyank.enable": true,

  "vim.useSystemClipboard": true,

  "vim.leader": "<space>",

  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["Q"], "after": ["@", "q"] },

    { "before": ["Y"], "after": ["y", "$"] },

    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] },

    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"],
      "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    },

    {
      "before": ["<leader>", "n"],
      "commands": ["editor.action.marker.next"],
      "when": ["editorFocus"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["editor.action.marker.prev"],
      "when": ["editorFocus"]
    }
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] }
  ],

  "workbench.iconTheme": "material-icon-theme",

  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",

  "editor.wordWrap": "on",

  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.showFoldingControls": "never",
  "workbench.activityBar.location": "hidden",
  "window.commandCenter": false,
  "window.density.editorTabHeight": "compact",
  "workbench.colorCustomizations": { "sideBarTitle.foreground": "#00000000" },
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "vscode_custom_css.imports": ["file://${userHome}/.dotfiles/vscode.css"],
  "workbench.statusBar.visible": false,
  "chat.commandCenter.enabled": false,
  "git.showCommitInput": false,

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": { "editor.defaultFormatter": "ms-python.black-formatter" },

  "workbench.editorAssociations": { "*.pdf": "latex-workshop-pdf-hook" },

  "terminal.integrated.scrollback": 999999,
  "terminal.integrated.persistentSessionScrollback": 999999,

  "typescript.preferences.useAliasesForRenames": false,

  "terminal.integrated.showExitAlert": false,

  "workbench.editor.closeEmptyGroups": false,

  "editor.accessibilitySupport": "off"
}
