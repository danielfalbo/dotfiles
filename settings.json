{
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  "editor.wordWrap": "on",

  "git.autofetch": "all",
  "git.confirmSync": false,

  "vim.easymotion": true,

  "vim.useSystemClipboard": true,

  "vim.leader": "<space>",

  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] },

    { "before": ["Q"], "after": ["@", "q"] },

    { "before": ["Y"], "after": ["y", "$"] },

    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"],
      "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    },

    {
      "before": ["<leader>", "n"],
      "commands": ["editor.action.marker.next"],
      "when": ["editorFocus"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["editor.action.marker.prev"],
      "when": ["editorFocus"]
    },

    { "before": ["u"], "commands": ["undo"] },
    { "before": ["c-r"], "commands": ["redo"] },

    { "before": ["c-h"], "commands": ["workbench.action.navigateLeft"] },
    { "before": ["c-l"], "commands": ["workbench.action.navigateRight"] },
    { "before": ["c-k"], "commands": ["workbench.action.navigateUp"] },
    { "before": ["c-j"], "commands": ["workbench.action.navigateDown"] }
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] },

    { "before": ["<"], "after": ["<", "g", "v"] },
    { "before": [">"], "after": [">", "g", "v"] }
  ],

  "window.autoDetectColorScheme": true,

  "workbench.iconTheme": "material-icon-theme",

  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",

  "workbench.editor.empty.hint": "hidden",
  "workbench.startupEditor": "newUntitledFile",
  "files.defaultLanguage": "text",

  "workbench.editor.tabActionCloseVisibility": false,
  "zenMode.showTabs": "none",
  "zenMode.fullScreen": false,
  "zenMode.centerLayout": false,
  "editor.minimap.enabled": false,
  "window.commandCenter": false,
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "breadcrumbs.enabled": false,
  "editor.showFoldingControls": "never",
  "editor.glyphMargin": false,

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  "C_Cpp.default.compilerPath": "/opt/homebrew/bin/g++-13 ",

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[cpp]": { "editor.defaultFormatter": "ms-vscode.cpptools" },
  "[java]": { "editor.defaultFormatter": "redhat.java" },
  "[python]": { "editor.defaultFormatter": "ms-python.black-formatter" },
  "[swift]": { "editor.defaultFormatter": "vknabel.vscode-apple-swift-format" },

  "workbench.editorAssociations": { "*.pdf": "latex-workshop-pdf-hook" },

  "[latex]": { "editor.formatOnSave": false },

  "terminal.integrated.scrollback": 999999,
  "terminal.integrated.persistentSessionScrollback": 999999,

  "liveshare.allowGuestDebugControl": true,
  "liveshare.allowGuestTaskControl": true,
  "liveshare.languages.allowGuestCommandControl": true
}
